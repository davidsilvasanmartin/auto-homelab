{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/davidsilvasanmartin/auto-homelab/scripts/env.config.schema.json",
  "title": "Env Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "prefix",
    "sections"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri-reference"
    },
    "prefix": {
      "type": "string",
      "minLength": 1
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Section"
      }
    }
  },
  "$defs": {
    "Variable": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "type",
        "description"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": "string"
        }
      }
    },
    "Section": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "description",
        "vars"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "vars": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/Variable"
          }
        }
      }
    }
  }
}